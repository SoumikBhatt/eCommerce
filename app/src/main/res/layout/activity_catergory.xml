<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.admin_activity.CatergoryActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add New Product"
                android:textSize="27sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="45dp"
                android:textColor="@color/colorText"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="45dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/iv_cat_t_shirts"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tshirts"/>

            <ImageView
                    android:id="@+id/iv_cat_sports_shirts"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sports"/>

            <ImageView
                    android:id="@+id/iv_cat_female_shirts"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/female_dresses"/>

            <ImageView
                    android:id="@+id/iv_cat_sweathers"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sweather"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="45dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/iv_cat_glass"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/glasses"/>

            <ImageView
                    android:id="@+id/iv_cat_bag"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/purses_bags"/>

            <ImageView
                    android:id="@+id/iv_cat_hat"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hats"/>

            <ImageView
                    android:id="@+id/iv_cat_shoes"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/shoess"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="45dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/iv_cat_headphones"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/headphoness"/>

            <ImageView
                    android:id="@+id/iv_cat_laptops"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/laptops"/>

            <ImageView
                    android:id="@+id/iv_cat_watches"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/watches"/>

            <ImageView
                    android:id="@+id/iv_cat_mobiles"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mobiles"/>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>