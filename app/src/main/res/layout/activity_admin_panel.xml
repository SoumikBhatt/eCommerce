<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.admin_activity.AdminPanelActivity">

    <ImageView
            android:id="@+id/iv_select_product_icon"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/select_product_image"
            android:scaleType="centerCrop"
            android:cropToPadding="false"/>

    <EditText
            android:id="@+id/et_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_select_product_icon"
            android:layout_marginTop="20dp"
            android:background="@drawable/inputs_design"
            android:padding="20dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:hint="Product Name"
            android:inputType="textMultiLine"/>

    <EditText
            android:id="@+id/et_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_product_name"
            android:layout_marginTop="20dp"
            android:background="@drawable/inputs_design"
            android:padding="20dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:hint="Product Description"
            android:inputType="textMultiLine"/>

    <EditText
            android:id="@+id/et_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_product_description"
            android:layout_marginTop="20dp"
            android:background="@drawable/inputs_design"
            android:padding="20dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:hint="Product Price"
            android:inputType="textMultiLine"/>

    <Button
            android:id="@+id/btn_add_new_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_product_price"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:textSize="18sp"
            android:text="Add New Product"
            android:textAllCaps="false"
            android:padding="17dp"
            android:background="@drawable/button_design"
            android:textColor="@color/colorWhite"/>

</RelativeLayout>