<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ProductDetailsActivity">

    <ImageView
            android:id="@+id/iv_product_det_icon"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            android:layout_margin="10dp"/>

    <TextView
            android:id="@+id/tv_product_det_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_below="@id/iv_product_det_icon"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"/>

    <TextView
            android:id="@+id/tv_product_det_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_below="@+id/tv_product_det_name"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:id="@+id/tv_product_det_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:layout_below="@+id/tv_product_det_category"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:id="@+id/tv_product_det_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_product_det_description"
            android:textColor="@color/colorPrimaryDark"/>

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/ebtn_product_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:initialNumber="1"
            app:textColor="@color/colorWhite"
            app:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_product_det_price"
            android:elevation="6dp"
    ></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fbtn_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/nav_cart"
            android:layout_margin="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"/>


</RelativeLayout>